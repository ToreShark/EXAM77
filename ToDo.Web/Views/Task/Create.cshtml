@using Microsoft.AspNetCore.Mvc.TagHelpers
@using ToDo.DAL.Enum
@model ToDo.DAL.Entities.TaskEntity

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>TaskEntity</h4>
